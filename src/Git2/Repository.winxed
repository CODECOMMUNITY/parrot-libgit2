namespace Git2 {
  class Repository {
    var ptr;
    function Repository() {
        var git_cache    = new Git2.Cache();
        var git_refcache = new Git2.RefCache();
        var sv = new 'StructView'([ DATATYPE_STRUCT, 9,
                DATATYPE_PTR,
                DATATYPE_SIZED, git_cache.size(), git_cache.align(),
                DATATYPE_SIZED, git_refcache.size(), git_refcache.align(),
                DATATYPE_PTR,
                DATATYPE_PTR,
                DATATYPE_PTR,
                DATATYPE_PTR,
                DATATYPE_UINT,
                DATATYPE_UINT
            ]);
        self.ptr = sv.alloc();
    }
  }
}
